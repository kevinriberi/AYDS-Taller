<!-- Vista history.erb -->
<!DOCTYPE html>
<html>
<head>
    <title>Historial</title>
    <!-- Incluye la biblioteca Chart.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.6.0/chart.min.js"></script>
    <link rel="stylesheet" href="/css/index.css">
</head>
<body>
    <h1>Historial de Puntos</h1>
    
    <!-- Elemento HTML donde se dibujará el gráfico -->
    <canvas id="grafico"></canvas>
    
    <!-- Botón para volver al inicio -->
    <form action="/" method="get">
        <div class="button-container">
            <button type="submit">Volver al Inicio</button>
        </div>
    </form>

    <!-- Script para dibujar el gráfico -->
    <script>
        // Datos dinámicos para el gráfico
        var data = {
            labels: [<% @datos_grafico.each do |data| %>"<%= (data[:fecha]).strftime("%Y-%m-%d") %>", <% end %>],
            datasets: [{
                label: "Puntos",
                data: [<% @datos_grafico.each do |data| %><%= data[:puntaje] %>, <% end %>],
                backgroundColor: "rgba(75, 192, 192, 0.2)", // Color de fondo de las barras
                borderColor: "rgba(75, 192, 192, 1)", // Color del borde de las barras
                borderWidth: 1 // Ancho del borde de las barras
            }]
        };

        var ctx = document.getElementById('grafico').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: data,
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
</body>
</html>

