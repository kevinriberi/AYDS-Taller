<!-- login.erb -->
<!DOCTYPE html>
<html>
  <head>
    <title>Login</title>
  </head>
  <body>
    <h1>Login</h1>
    <% if @error %>
      <p class="error"><%= @error %></p>
    <% end %>
    <form action="/login" method="post">
      <div>
        <label>Email:</label>
        <input type="email" name="email" />
      </div>
      <div>
        <label>Password:</label>
        <input type="password" name="password" />
      </div>
      <button type="submit">Login</button>
    </form>
  </body>
</html>